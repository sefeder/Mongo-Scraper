

{{#if results}}
<br>
<header class="header">
    <img id="onion" src="images/onion.png">
    <h1 id="title">
        <strong>the</strong> ONION...SCRAPER</h1>
    <img id="scraper" src="images/scraper.png">
</header>
<div class="cardDisplay">
{{#each results}} 
    {{#if summary}}


    <div class="card" style="width: 18rem;">
        <img class="card-img-top" src="{{image}}" alt="Card image cap">
        <div class="card-body">
            <a href="{{URL}}" target="_blank">
                <h5 class="card-title">{{title}}</h5>
            </a>
            <p class="card-text">{{summary}}</p>
            <div class="btnDiv">
                <button data-toggle="modal" data-URL="{{this.URL}}" data-target="#{{@index}}noteModal" id="notesBtn" data-id="{{_id}}" class="btn notesBtn btn-dark">Notes</button>
                <button id="removeBtn" data-id="{{_id}}" class="btn removeBtn btn-dark">Remove</button>
            </div>
        </div>
    </div>


    <div class="modal fade" id="{{@index}}noteModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-body">
                    <h4>Notes on: "{{title}}"</h4>
                    <br>
                    <div class="noteDisplay">
                        {{#if notes}}
                        <ul>
                            {{#each notes}}
                            <div id="note">
                                <li data-id="{{../_id}}">
                                    <p id="notes">{{this}}</p>
                                </li>
                                <button class="btn xBtn btn-sm btn-danger">X</button>
                            </div>
                            {{/each}}
                        </ul>
                        {{else}}
                        <p>(You don't have any notes on this article yet)</p>
                        {{/if}}
                    </div>
                    <br>
                    <form>
                        <div class="form-group">
                            <textarea class="form-control" placeholder="Type any notes about this article here" type="text" name="note" id="note"></textarea>
                        </div>
                        <div class="form-group">
                            <button id="addNote" data-URL="{{URL}}" class="btn addNote btn-dark" type="submit">Add Note</button>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">

                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

    {{/if}} 
{{/each}}

</div>

{{else}}
<br><br>
<header class="header">
    <img id="onion" src="images/onion.png">
    <h1 id="title">
        <strong>the</strong> ONION...SCRAPER</h1>
    <img id="scraper" src="images/scraper.png">
</header>
<br><br>
<div class="noSaved">
    <div class="jumboDiv">
        <div class="jumbotron">
             <h2 class="display-4">Uh Oh! You don't have any saved articles.</h2>
        </div>
    </div>

</div>

{{/if}}