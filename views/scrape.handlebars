<div class="modal fade" id="newArticleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-body">
        {{#if oneArticle}}
        <h1>{{newArticles}} new article was added!</h1>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Great! Let's See It</button>
        </div>
        {{else}}
            {{#if newArticles}}
                <h1>{{newArticles}} new articles were added!</h1>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Great! Let's See Them</button>
            </div>
            {{else}}
            <h1>No new articles added. Check back a little later!</h1>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Show Me the Old Ones</button>
        </div>
            {{/if}}
        {{/if}}
    </div>
</div>
